<div class="form-inline nested-fields">
    <div class="form-group field">
        <div class="input-group">
            <%= f.label '控件名称', class: 'input-group-addon'%>
            <%= f.text_field :name, placeholder: "名称", class: 'form-control' %>
        </div>
    </div>
    <div class="form-group field">
        <div class="input-group">
            <%= f.label '控制地址', class: 'input-group-addon'%>
            <%= f.text_field :control_address, placeholder: "控制地址", class: 'form-control' %>
        </div>
    </div>

    <div class="form-group field">
        <div class="input-group">
            <%= f.label '反馈地址', class: 'input-group-addon'%>
            <%= f.text_field :status_address, placeholder: "反馈地址", class: 'form-control', disabled: f.object.i_type==0 %>
        </div>
    </div>

    <div class="form-group field">
        <div class="input-group">
            <%= f.label '控制类型', class: 'input-group-addon'%>
            <%= f.select(:control_type, [['1bit', 0], ['1byte', 1], ['2byte', 2]], {}, {class: 'form-control'}) %>
        </div>
    </div>

    <%= f.hidden_field :i_type, value: f.object.i_type %>
    <%= f.hidden_field :status_value, value: f.object.status_value %>
    <%= f.hidden_field :min_control_value, value: f.object.min_control_value %>
    <%= f.hidden_field :max_control_value, value: f.object.max_control_value %>
    <%= f.hidden_field :min_status_value, value: f.object.min_status_value %>
    <%= f.hidden_field :max_status_value, value: f.object.max_status_value %>

    <div class="form-group field">
        <div class="input-group">
            <%= f.label '控制数值', class: 'input-group-addon'%>
            <%= f.text_field :control_value, placeholder: "控制值" , class: 'form-control'%>
        </div>
    </div>

    <div class="form-group field">
        <div class="input-group">
            <%= link_to_remove_association "删除控件", f, data: {confirm: "Are You Sure to Delete #{f.object.name}控件?"},class: 'form-control btn btn-danger' %>
        </div>
    </div>
  </div>
<br>