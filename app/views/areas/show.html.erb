<p>
  <strong>楼层名称:</strong>
  <%= @area.name %>
</p>
 
<p>
  <strong>楼层图片:</strong>
  <%= @area.image_name %>
</p>

<%= link_to '返回楼层', building_floor_path(@area.floor.building, @area.floor) %>

<h2>所有房间设备</h2>
<table class="table">
  <tr>
    <th>名称</th>
    <th>图片</th>
    <th>种类</th>
    <th colspan="3"></th>
  </tr>
  <%= render @area.devices %>
</table>

<h2>添加房间内设备</h2>
<%= form_for([@area.floor.building, @area.floor, @area, @area.devices.build]) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :name, '设备名称'%>
    <%= f.text_field :name, placeholder: "设备的名字." %>
  </div>
  <div class="field">
    <%= f.label :image_name, '设备图片'%>
    <%= f.text_field :image_name, placeholder: "设备的图片" %>
  </div>
  <div class="field">
    <%= f.label :i_type, '设备类型'%>
    <%= f.select(:i_type, [['场景', 0], ['灯光', 1], ['灯光+调光',2],['窗帘',3],['空调',4],['地暖',5],['新风',6]]) %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>