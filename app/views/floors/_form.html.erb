<%= form_for([@building, @building.floors.build]) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label '楼层名称'%>
    <%= f.text_field :name, placeholder: "楼层的名字.", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label '楼层图片'%>
    <%= f.text_field :image_name, placeholder: "楼层图片", class: 'form-control' %>
  </div>
  <%= f.submit "确定", class: "btn btn-primary btn-block" %>
  <%= link_to '返回', building_path(@floor.building), class: "btn btn-default btn-block" %>
<% end %>