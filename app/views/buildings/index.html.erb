<h1>Listing buildings</h1>
<div class="col-sm-6 col-md-4">
  <div class="thumbnail">
    <img src="/assets/LeControl.png" alt="...">
    <div class="caption">
      <h3>...</h3>
      <p>...</p>
      <div class="list_group">
          <%= link_to '新建项目', new_building_path, class: 'btn btn-info btn-block'  %>
      </div>
    </div>
  </div>
</div>

<% @buildings.each do |building|%>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="/assets/LeControl.png" alt="...">
      <div class="caption">
        <h3><%= building.name %></h3>
        <p><%= building.socket_address %></p>
        <div class="list_group">
            <%= link_to '详情', building_path(building), class: 'btn btn-primary' %>
            <%= link_to '编辑', edit_building_path(building), class: 'btn btn-warning' %>
            <%= link_to '删除', building_path(building), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'%>
        </div>
      </div>
    </div>
  </div>
<% end %>
