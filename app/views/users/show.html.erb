<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.buildings.any? %>
      <h3>Buildings (<%= @user.buildings.count %>)</h3>
      <ol class="buildings">
        <%= render @buildings %>
      </ol>
      <%= will_paginate @buildings %>
    <% end %>
  </div>
</div>
